@model MasterMailVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">

    <div class="col-md-6">
        <h1>Mail Listesi</h1>
        <table class="table table-bordered table-sm mb-0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Mail Listesi Adı</th>
                    <th>Email</th>
                    <th>Grup Id</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MailListVMs)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.MailListGroupId</td>
                        <td>@item.Status</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" asp-route-name="MailList" class="badge badge-danger">Pasif</a>
                            <a asp-action="UpdateMailList" asp-route-id="@item.Id" class="badge badge-warning">Güncelle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="UpdateMailList" class="btn btn-block btn-primary">Yeni Kayıt Ekle</a>
    </div>

    <div class="col-md-6">
        <h1>Mail Listesi Grubu</h1>
        <table class="table table-sm table-bordered mb-0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Mail Group Adı</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MailListGroupVMs)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Status</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" asp-route-name="MailListGroup" class="badge badge-danger">Pasif</a>
                            <a asp-action="UpdateMailListGroup" asp-route-id="@item.Id" class="badge badge-warning">Güncelle</a>
                        </td>
                    </tr>

                }
                <tr>
            </tbody>
        </table>
        <a asp-action="UpdateMailListGroup" class="btn btn-block btn-primary">Yeni Kayıt Ekle</a>
    </div>
</div>
