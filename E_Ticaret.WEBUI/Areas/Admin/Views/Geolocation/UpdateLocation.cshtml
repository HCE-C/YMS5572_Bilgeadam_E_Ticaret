@model LocationViewModel

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4>Şehir</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateLocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Şehir Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Predefined" class="control-label"></label>
                <select asp-for="Predefined" class="w-100" asp-items="Html.GetEnumSelectList<E_Ticaret.Model.Enums.GeneralEnums.Predefined>()"></select>
                <span asp-validation-for="Predefined" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="w-100" asp-items="Html.GetEnumSelectList<E_Ticaret.Common.Client.Enums.Status>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ülke</label>
                <select class="w-100" asp-for="Country.Id" asp-items="@(new SelectList(ViewBag.Country,"Id","Name"))"></select>
                <span asp-validation-for="Country.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Bölge</label>
                <select class="w-100" asp-for="Region.Id" asp-items="@(new SelectList(ViewBag.Region,"Id","Name"))"></select>
                <span asp-validation-for="Region.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

