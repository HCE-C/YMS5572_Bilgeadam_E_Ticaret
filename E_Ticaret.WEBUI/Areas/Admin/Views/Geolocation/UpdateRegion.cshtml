@model E_Ticaret.WEBUI.Models.RegionViewModels.RegionViewModel

@{
    ViewData["Title"] = "UpdateRegion";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h4>Bölge</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateRegion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Bölge Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="w-100" asp-items="Html.GetEnumSelectList<E_Ticaret.Common.Client.Enums.Status>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

