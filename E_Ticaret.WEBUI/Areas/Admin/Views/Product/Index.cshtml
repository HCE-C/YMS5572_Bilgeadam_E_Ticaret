@model List<ProductViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    String fName = "";
}

<h1>Index</h1>

@Html.ActionLink("Create", "Create", new { area = "Admin" }, new { @class = "btn btn-primary" })



@section Css{
    <style type="text/css">
        .table-image > td, th {
            vertical-align: middle;
        }
    </style>
}

<div class="text-dange"><p class="text-right">@TempData["Message"]</p></div>

<table class="table table-bordered table-">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Durum</th>
            <th>Üst Kategorisi</th>
            <th>Ürün Resmi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Pimage != null) { fName = item.Pimage.Filename; }
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Status</td>
                <td>@item.ParentId</td>
                <td><img src="@fName" alt="kategori resmi" width="100" height="100" /></td>
                <td>
                    <a class="btn btn-sm btn-success" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>

            fName = "";
        }
    </tbody>
</table>