@model List<MasterVM>

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
    var ShippingAddress = Model.FirstOrDefault().UpdateShippingViewModel;
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6>
                    <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>
            </div>
        </div>
        <div class="checkout__form">
            <h4>Billing Details</h4>

            <form action="#">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>@Html.DisplayNameFor(x => x.FirstOrDefault().UpdateShippingViewModel.Firstname)<span>*</span></p>
                                    <input asp-for="FirstOrDefault().UpdateShippingViewModel.Firstname" type="text">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>@Html.DisplayNameFor(x => x.FirstOrDefault().UpdateShippingViewModel.Surname)<span>*</span></p>
                                    <input asp-for="FirstOrDefault().UpdateShippingViewModel.Surname" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>@Html.DisplayNameFor(x => Model.FirstOrDefault().UpdateShippingViewModel.CountryId)<span>*</span></p>
                            <select class="w-100" asp-for="FirstOrDefault().UpdateShippingViewModel.CountryId" asp-items="@(new SelectList(ViewBag.Country,"Id","Name"))"></select>
                        </div>
                        <div class="checkout__input">
                            <p>@Html.DisplayNameFor(x => x.FirstOrDefault().UpdateShippingViewModel.Address)<span>*</span></p>
                            <input asp-for="FirstOrDefault().UpdateShippingViewModel.Address" placeholder="Adres" class="checkout__input__add">
                            <input type="text" placeholder="Tarif (opisyonel)">
                        </div>
                        <div class="checkout__input">
                            <p>@Html.DisplayNameFor(x => x.FirstOrDefault().UpdateShippingViewModel.LocationId)<span>*</span></p>
                            <select class="w-100" asp-for="FirstOrDefault().UpdateShippingViewModel.LocationId" asp-items="@(new SelectList(ViewBag.Location,"Id","Name"))"></select>
                        </div>
                        <div class="checkout__input">
                            <p>@Html.DisplayNameFor(x => x.FirstOrDefault().UpdateShippingViewModel.SubLocation)<span>*</span></p>
                            <input asp-for="FirstOrDefault().UpdateShippingViewModel.SubLocation">
                        </div>
                        <div class="checkout__input">
                            <p>@Html.DisplayNameFor(x => x.FirstOrDefault().UpdateShippingViewModel.PhoneNumber)<span>*</span></p>
                            <input asp-for="FirstOrDefault().UpdateShippingViewModel.PhoneNumber">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>@Html.DisplayNameFor(x => x.FirstOrDefault().UpdateShippingViewModel.MobilePhoneNumber)<span>*</span></p>
                                    <input asp-for="FirstOrDefault().UpdateShippingViewModel.MobilePhoneNumber">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>@Html.DisplayNameFor(x => x.FirstOrDefault().UpdateShippingViewModel.PhoneNumber)<span>*</span></p>
                                    <input asp-for="FirstOrDefault().UpdateShippingViewModel.PhoneNumber">
                                </div>
                            </div>
                        </div>

                        <div class="checkout__input__checkbox">
                            <label for="diff-acc">
                                Teslimat Adresi ve Fatura Adresi ile aynı olsun
                                <input type="checkbox" id="diff-acc" checked>
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="checkout__input">
                            <p>Sipariş Notları<span>*</span></p>
                            <input type="text"
                                   placeholder="Siparişle ilgili notlarınızı buraya yazabilirsiniz.">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Siparişiniz</h4>
                            <div class="checkout__order__products">Ürünler <span>Toplam</span></div>
                            <ul>
                                @foreach (var item in Model)
                                {
                                    <li>
                                        @item.ProductName<span>
                                            @{ var total = item.Price * item.Quantity;}
                                            @total.ToString("F2") TL
                                        </span>
                                    </li>
                                }
                            </ul>
                            <div class="checkout__order__subtotal">Alt Toplam <span>@ViewData["Price"] TL</span></div>
                            <div class="checkout__order__total">Toplam <span>@ViewData["Price"] TL</span></div>

                            <button type="submit" class="site-btn">Ödeme Yap</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
